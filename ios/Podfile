# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  # FlutterFire pulls in Swift pods. Static frameworks are generally the least painful option.
  use_frameworks! :linkage => :static

  # IMPORTANT: do NOT enable `use_modular_headers!` globally.
  # It can break header resolution in some pod targets.
  # Only opt-in modular headers for the pods that need module maps under static linkage.
  pod 'GoogleUtilities', :modular_headers => true
  pod 'GoogleUtilities/Environment', :modular_headers => true
  pod 'GoogleUtilities/UserDefaults', :modular_headers => true
  pod 'GoogleUtilities/Network', :modular_headers => true
  pod 'GoogleUtilities/AppDelegateSwizzler', :modular_headers => true
  pod 'GoogleUtilities/Reachability', :modular_headers => true

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      # On newer Xcodes, filelists can point at stale/absolute paths and break builds.
      config.build_settings['USE_FILELISTS'] = 'NO'

      # Some pods (or generated xcconfigs) can pick up an unsupported `-G` flag.
      # Strip it everywhere to keep simulator builds working.
      %w[OTHER_CFLAGS OTHER_CPLUSPLUSFLAGS OTHER_SWIFT_FLAGS].each do |key|
        v = config.build_settings[key]
        next if v.nil?

        if v.is_a?(String)
          flags = v.split(' ').reject { |f| f == '-G' || f.start_with?('-G') }
          config.build_settings[key] = flags.join(' ')
        elsif v.is_a?(Array)
          config.build_settings[key] = v.reject { |f| f == '-G' || (f.respond_to?(:start_with?) && f.start_with?('-G')) }
        end
      end
    end
  end
end