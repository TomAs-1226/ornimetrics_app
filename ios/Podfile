# Uncomment this line to define a global platform for your project
# platform :ios, '12.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

workspace 'Runner.xcworkspace'

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  def strip_unsupported_flag(settings, flag)
    return settings if settings.nil?

    if settings.is_a?(Array)
      settings.reject { |value| value == flag || value.start_with?(flag) }
    elsif settings.is_a?(String)
      settings.split(' ').reject { |value| value == flag || value.start_with?(flag) }.join(' ')
    else
      settings
    end
  end

  def sanitize_build_settings!(config, flag)
    config.build_settings.each do |key, value|
      next unless value.is_a?(String) || value.is_a?(Array)

      config.build_settings[key] = strip_unsupported_flag(value, flag)
    end
  end

  def strip_flag_from_xcconfig(path, flag)
    return unless path && File.exist?(path)

    contents = File.read(path)
    updated_lines = contents.each_line.map do |line|
      stripped = line.lstrip
      next line if stripped.start_with?('//') || stripped.start_with?('#')

      updated = line.gsub(/(^|\s)-#{Regexp.escape(flag)}(\s|$)/, ' ')
      updated.gsub(/\s+/, ' ')
    end
    updated = updated_lines.join
    File.write(path, updated) if updated != contents
  end

  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      sanitize_build_settings!(config, '-G')
      strip_flag_from_xcconfig(config.base_configuration_reference&.real_path, 'G')
      config.build_settings['USE_FILELISTS'] = 'NO'
    end
  end

  installer.aggregate_targets.each do |aggregate|
    strip_flag_from_xcconfig(aggregate.xcconfig_path, 'G')
  end

  installer.generated_projects.each do |project|
    project.targets.each do |target|
      target.build_configurations.each do |config|
        sanitize_build_settings!(config, '-G')
        strip_flag_from_xcconfig(config.base_configuration_reference&.real_path, 'G')
        config.build_settings['USE_FILELISTS'] = 'NO'
      end
    end
  end
end
