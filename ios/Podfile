# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  # FlutterFire pulls in Swift pods. Static frameworks are generally the least painful option.
  use_frameworks! :linkage => :static

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

# Helper method to strip -G flag from any string or array
def strip_g_flag(value)
  return nil if value.nil?
  if value.is_a?(String)
    value.gsub(/-G\b/, '').gsub(/\s+/, ' ').strip
  elsif value.is_a?(Array)
    value.map { |v| strip_g_flag(v) }.compact.reject(&:empty?)
  else
    value
  end
end

post_install do |installer|
  # Pods that need modular headers for static framework linking
  pods_needing_modular_headers = [
    'GoogleUtilities',
    'GTMSessionFetcher',
    'FirebaseCore',
    'FirebaseCoreInternal',
    'FirebaseAppCheckInterop',
    'FirebaseAuthInterop',
    'FirebaseStorageInternal',
    'FirebaseCoreExtension',
    'RecaptchaInterop'
  ]

  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    # Enable modular headers for specific pods by setting DEFINES_MODULE
    needs_modular = pods_needing_modular_headers.any? { |name| target.name.start_with?(name) }

    # Special handling for BoringSSL-GRPC which uses -G flag in assembly
    is_boringssl = target.name.include?('BoringSSL') || target.name.include?('grpc')
    # Special handling for leveldb-library which has port namespace issues on newer Xcode
    is_leveldb = target.name.include?('leveldb')
    # Special handling for Firebase pods
    is_firebase = target.name.include?('Firebase') || target.name.include?('firebase')

    target.build_configurations.each do |config|
      # Ensure all pods use iOS 13.0 minimum deployment target
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'

      # On newer Xcodes, filelists can point at stale/absolute paths and break builds.
      config.build_settings['USE_FILELISTS'] = 'NO'

      # Enable module maps for pods that need modular headers under static linking
      if needs_modular
        config.build_settings['DEFINES_MODULE'] = 'YES'
        config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
      end

      # For BoringSSL/gRPC, disable assembly optimizations on simulator
      if is_boringssl
        # Disable assembly for simulator builds - use C fallbacks instead
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
        if config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'].is_a?(Array)
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'OPENSSL_NO_ASM=1'
        end
      end

      # Fix Firebase version not defined error
      if is_firebase
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
        if config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'].is_a?(Array)
          unless config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'].any? { |d| d.to_s.include?('Firebase_VERSION') }
            config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'Firebase_VERSION=10.25.0'
          end
        end
      end

      # Fix leveldb-library port namespace issue on Xcode 15+
      if is_leveldb
        # Add the leveldb source directory to header search paths
        config.build_settings['HEADER_SEARCH_PATHS'] ||= ['$(inherited)']
        if config.build_settings['HEADER_SEARCH_PATHS'].is_a?(Array)
          config.build_settings['HEADER_SEARCH_PATHS'] << '"${PODS_ROOT}/leveldb-library"'
          config.build_settings['HEADER_SEARCH_PATHS'] << '"${PODS_ROOT}/leveldb-library/include"'
        elsif config.build_settings['HEADER_SEARCH_PATHS'].is_a?(String)
          config.build_settings['HEADER_SEARCH_PATHS'] += ' "${PODS_ROOT}/leveldb-library" "${PODS_ROOT}/leveldb-library/include"'
        end
        # Use C++17 for leveldb
        config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++17'
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
        if config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'].is_a?(Array)
          config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'LEVELDB_PLATFORM_POSIX=1'
        end
      end

      # Strip -G flag from all compiler/linker flags
      %w[
        OTHER_CFLAGS
        OTHER_CPLUSPLUSFLAGS
        OTHER_SWIFT_FLAGS
        OTHER_LDFLAGS
        CC
        WARNING_CFLAGS
        GCC_PREPROCESSOR_DEFINITIONS
      ].each do |key|
        config.build_settings[key] = strip_g_flag(config.build_settings[key])
      end
    end

    # Also patch build phases that might contain -G flag
    target.build_phases.each do |phase|
      if phase.respond_to?(:shell_script) && phase.shell_script
        if phase.shell_script.include?('-G')
          phase.shell_script = phase.shell_script.gsub(/-G\b/, '')
        end
      end
    end
  end

  # Fix project-level build configurations
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    %w[OTHER_CFLAGS OTHER_CPLUSPLUSFLAGS OTHER_LDFLAGS].each do |key|
      config.build_settings[key] = strip_g_flag(config.build_settings[key])
    end
  end

  # Remove -G from ALL generated xcconfig files
  pods_root = installer.sandbox.root.to_s
  Dir.glob("#{pods_root}/**/*.xcconfig").each do |xcconfig|
    content = File.read(xcconfig)
    if content.include?('-G')
      new_content = content.gsub(/-G\b/, '').gsub(/\s+/, ' ')
      File.write(xcconfig, new_content)
    end
  end

  # Patch any shell scripts in the Pods directory that might pass -G
  Dir.glob("#{pods_root}/**/*.sh").each do |script|
    content = File.read(script)
    if content.include?('-G')
      new_content = content.gsub(/-G\b/, '')
      File.write(script, new_content)
    end
  end

  # Fix leveldb-library port namespace issue by patching source files
  # The issue is that some files reference 'port::' without including port.h
  leveldb_files_to_patch = [
    "#{pods_root}/leveldb-library/db/version_set.h",
    "#{pods_root}/leveldb-library/db/version_set.cc",
    "#{pods_root}/leveldb-library/table/table_builder.cc",
    "#{pods_root}/leveldb-library/db/db_impl.cc",
    "#{pods_root}/leveldb-library/db/db_impl.h"
  ]

  leveldb_files_to_patch.each do |file|
    next unless File.exist?(file)
    content = File.read(file)
    # Add port/port.h include if it uses port:: but doesn't include it
    if content.include?('port::') && !content.include?('#include "port/port.h"')
      # Find the last #include line and add port/port.h after it
      if content =~ /(#include\s+["<][^">]+[">]\s*\n)(?!#include)/
        new_content = content.sub(/(#include\s+["<][^">]+[">]\s*\n)(?!#include)/) do |match|
          "#{match}#include \"port/port.h\"\n"
        end
        File.write(file, new_content)
      end
    end
  end
end