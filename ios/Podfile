# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  # FlutterFire pulls in Swift pods. Static frameworks are generally the least painful option.
  use_frameworks! :linkage => :static

  # IMPORTANT: do NOT enable `use_modular_headers!` globally.
  # It can break header resolution in some pod targets.
  # Only opt-in modular headers for the pods that need module maps under static linkage.
  pod 'GoogleUtilities', :modular_headers => true
  pod 'GoogleUtilities/Environment', :modular_headers => true
  pod 'GoogleUtilities/UserDefaults', :modular_headers => true
  pod 'GoogleUtilities/Network', :modular_headers => true
  pod 'GoogleUtilities/AppDelegateSwizzler', :modular_headers => true
  pod 'GoogleUtilities/Reachability', :modular_headers => true

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      # Ensure all pods use iOS 13.0 minimum deployment target
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'

      # On newer Xcodes, filelists can point at stale/absolute paths and break builds.
      config.build_settings['USE_FILELISTS'] = 'NO'

      # Exclude arm64 for simulator to avoid architecture issues on Intel Macs
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64' if config.build_settings['SDKROOT'] == 'iphonesimulator'

      # Some pods (especially BoringSSL-GRPC) can pick up an unsupported `-G` flag.
      # Strip it everywhere to keep simulator builds working.
      %w[OTHER_CFLAGS OTHER_CPLUSPLUSFLAGS OTHER_SWIFT_FLAGS OTHER_LDFLAGS].each do |key|
        v = config.build_settings[key]
        next if v.nil?

        if v.is_a?(String)
          # Remove -G flag and any flag starting with -G
          cleaned = v.gsub(/\s*-G\S*/, '').gsub(/\s+/, ' ').strip
          config.build_settings[key] = cleaned
        elsif v.is_a?(Array)
          config.build_settings[key] = v.reject { |f| f.to_s == '-G' || f.to_s.start_with?('-G') }
        end
      end
    end
  end

  # Also fix the xcconfig files directly for BoringSSL-GRPC
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
  end

  # Remove -G from generated xcconfig files
  xcconfig_path = installer.sandbox.root.to_s + '/Target Support Files'
  Dir.glob("#{xcconfig_path}/**/*.xcconfig").each do |xcconfig|
    content = File.read(xcconfig)
    if content.include?('-G')
      new_content = content.gsub(/\s*-G\S*/, '')
      File.write(xcconfig, new_content)
    end
  end
end