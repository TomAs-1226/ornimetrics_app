# Firebase (required for production)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=000000000000
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com

# Platform-specific Firebase app IDs + API keys
FIREBASE_ANDROID_APP_ID=1:000000000000:android:abcdef123456
FIREBASE_ANDROID_API_KEY=AIzaSyExampleAndroid
FIREBASE_IOS_APP_ID=1:000000000000:ios:abcdef123456
FIREBASE_IOS_API_KEY=AIzaSyExampleIos
FIREBASE_MACOS_APP_ID=1:000000000000:ios:abcdef123456
FIREBASE_MACOS_API_KEY=AIzaSyExampleMac
FIREBASE_WEB_APP_ID=1:000000000000:web:abcdef123456
FIREBASE_WEB_API_KEY=AIzaSyExampleWeb
FIREBASE_WINDOWS_APP_ID=1:000000000000:web:abcdef123456
FIREBASE_WINDOWS_API_KEY=AIzaSyExampleWindows

# Weather API (WeatherAPI.com-style endpoints)
WEATHER_API_KEY=replace-with-weather-api-key
WEATHER_ENDPOINT=https://api.weatherapi.com/v1
